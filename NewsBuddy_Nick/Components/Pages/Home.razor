@page "/"
@inherits NewsBuddy_Nick.Pages.Home

<h1>Latest News</h1>

@if (articles == null)
{
    <p>Loading news...</p>
}
else if (!articles.Any())
{
    <p>No news available.</p>
}
else
{
    <ul>
        @foreach (var article in articles)
        {
            <li style="display: flex; align-items: center; margin-bottom: 12px;">
                <!-- Options button -->
                <button @onclick="async () => await ShowOptions(article)">☰</button>


                <!-- Article content -->
                <div>
                    <a href="#" @onclick="() => OpenArticle(article.Url)">
                        <strong>@article.Title</strong>
                    </a>
                    <br />
                    <em>@article.Author</em><br />
                    @article.Description
                </div>
            </li>
        }
    </ul>
}
